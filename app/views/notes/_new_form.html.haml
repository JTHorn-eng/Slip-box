-# frozen_string_literal: true
= simple_form_for(@note) do |f|
  .form-inputs
    = f.input :title
    = f.input :unique_identifier
    = f.label :content
    = f.rich_text_area :content
    = f.association :tree
    = f.association :references, input_html: { class: 'select2' }

  .form-actions
    = f.button :submit, class: 'btn btn-outline-primary'
    